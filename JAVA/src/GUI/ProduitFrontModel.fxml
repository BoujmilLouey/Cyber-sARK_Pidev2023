<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../../../utils/MainStyle.css"
            xmlns="http://javafx.com/javafx/8.0.171">
    <AnchorPane layoutX="30.0" layoutY="30.0" style="-fx-background-color: white;" styleClass="window-rounded"
                AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
                AnchorPane.topAnchor="30.0">
        <effect>
            <DropShadow blurType="GAUSSIAN" color="#00000033" height="50.0" radius="24.5" width="50.0"/>
        </effect>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <BorderPane>
                <center>
                    <ImageView fx:id="imageIV" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@../../../images/mdi/image-placeholder.png"/>
                        <BorderPane.margin>
                            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
                        </BorderPane.margin>
                    </ImageView>
                </center>
            </BorderPane>
            <VBox spacing="10.0">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <Text fx:id="titleText" text="Title" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>
                <Text fx:id="priceText" text="Price" wrappingWidth="190">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                </Text>

            </VBox>
            <Pane prefWidth="1.0" style="-fx-background-color: #00000055;">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Pane>
            <Button fx:id="buyBTN" mnemonicParsing="false" styleClass="light-button" text="Ajouter au panier">
                <HBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </HBox.margin>
            </Button>
            <VBox spacing="10.0"/>

        </HBox>
    </AnchorPane>
</AnchorPane>
