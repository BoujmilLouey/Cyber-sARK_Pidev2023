{% extends 'base_BACK.html.twig' %}


{% block title %}Calendar
{% endblock %}

{% block body %}
	<h1>Calendar</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ calendar.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ calendar.title }}</td>
			</tr>
			<tr>
				<th>Start</th>
				<td>{{ calendar.start ? calendar.start|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>End</th>
				<td>{{ calendar.end ? calendar.end|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>All_day</th>
				<td>{{ calendar.allDay ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_calendar_index') }}">back to list</a>

	<a href="{{ path('app_calendar_edit', {'id': calendar.id}) }}">edit</a>

	{{ include('calendar/_delete_form.html.twig') }}
{% endblock %}
