{% extends 'base.html.twig' %}

{% block title %}Scores index{% endblock %}

{% block body %}
    <h1>Scores index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Score</th>
                <th>CreatedAt</th>
                <th>Username</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for score in scores %}
            <tr>
                <td>{{ score.id }}</td>
                <td>{{ score.score }}</td>
                <td>{{ score.createdAt ? score.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ score.username }}</td>
                <td>
                    <a href="{{ path('app_scores_show', {'id': score.id}) }}">show</a>
                    <a href="{{ path('app_scores_edit', {'id': score.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_scores_new') }}">Create new</a>
{% endblock %}
