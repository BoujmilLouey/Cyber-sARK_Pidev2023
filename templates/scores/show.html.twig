{% extends 'base.html.twig' %}

{% block title %}Scores{% endblock %}

{% block body %}
    <h1>Scores</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ score.id }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ score.score }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ score.createdAt ? score.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ score.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_scores_index') }}">back to list</a>

    <a href="{{ path('app_scores_edit', {'id': score.id}) }}">edit</a>

    {{ include('scores/_delete_form.html.twig') }}
{% endblock %}
