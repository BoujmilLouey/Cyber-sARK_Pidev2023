{% extends 'base_BACK.html.twig' %}

{% block title %}Cours index
{% endblock %}


{% block content %}
	{% include 'template/commentaire/crud.html.twig' %}
{% endblock %}


{% block body %}
	<h1>Cours index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Note</th>
				<th>Video</th>
				<th>Pdf</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for cour in cours %}
				<tr>
					<td>{{ cour.id }}</td>
					<td>{{ cour.nom }}</td>
					<td>{{ cour.description }}</td>
					<td>{{ cour.note }}</td>
					<td>{{ cour.video }}</td>
					<td>{{ cour.pdf }}</td>
					<td>
						<a href="{{ path('app_cours_show', {'id': cour.id}) }}">show</a>
						<a href="{{ path('app_cours_edit', {'id': cour.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_cours_new') }}">Create new</a>
{% endblock %}
